{
  "extends": "../../tsconfig.base.json",
  "exclude": [
    "./scripts/**/*"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/index.d.ts",
    "./src/index.js"
  ],
  "references": [
    {
      "path": "../irsdk-node-types"
    }
  ],
  "compilerOptions": {
    "paths": {
      "@irsdk-node/types": ["../irsdk-node-types"],
    },
    "allowJs": true,
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./src",
    "declarationDir": "dist"
  }
}
