{
  "extends": "../../tsconfig.base.json",
  "exclude": [
    "./scripts/**/*"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/mock-data/session.json",
    "./src/mock-data/telemetry.json",
  ],
  "references": [
    {
      "path": "../irsdk-node-types"
    }
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "ESNext",
    ],
    "allowJs": true,
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
  }
}