{
  "name": "@irsdk-node/native",
  "version": "2.1.0",
  "author": {
    "name": "Matt Bengston",
    "email": "bengsfort@gmail.com"
  },
  "engines": {
    "node": ">=16"
  },
  "files": [
    "package.json",
    "./build",
    "./dist",
    "./lib",
    "./src",
    "./scripts",
    "./binding.gyp",
    "./README.md"
  ],
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "scripts": {
    "clean": "node-gyp clean && rm -rf dist",
    "preversion": "yarn clean && yarn run build-ts && yarn run build",
    "build": "node-gyp configure && concurrently \"yarn:build-ts\" \"yarn:build-cpp\"",
    "prebuild": "node-gyp clean && yarn run configure",
    "build-ts": "tsc --build --force",
    "build-cpp": "concurrently \"yarn:build-cpp-release\" \"yarn:build-cpp-debug\"",
    "build-cpp-release": "node-gyp build",
    "build-cpp-debug": "node-gyp configure && node-gyp build --debug",
    "watch": "tsc --watch",
    "lint": "eslint ./src --ext .js,.ts",
    "prepack": "yarn build",
    "generate-types": "node ./scripts/generate-var-types.js"
  },
  "packageManager": "yarn@3.1.0",
  "preferUnplugged": false,
  "os": [
    "win32"
  ],
  "dependencies": {
    "@irsdk-node/types": "^2.1.0",
    "bindings": "^1.5.0",
    "node-addon-api": "*",
    "node-gyp": "^8.4.1"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "node-notifier": "^10.0.0",
    "typescript": "^4.5.2"
  }
}
