{
  "name": "irsdk-node",
  "version": "0.1.0",
  "author": {
    "name": "Matt Bengston",
    "email": "bengsfort@gmail.com"
  },
  "scripts": {
    "clean": "rm -rf build dist && node-gyp clean",
    "build": "yarn build-cpp && yarn build-ts",
    "build-cpp": "node-gyp configure && node-gyp rebuild",
    "build-cpp:debug": "node-gyp configure && node-gyp rebuild --debug",
    "build-ts": "tsc",
    "build:debug": "yarn build-cpp:debug && yarn build-ts",
    "watch": "tsc --watch",
    "run-debug": "node ./dist/tests/bridge-test.js",
    "lint": "eslint ./src --ext .js,.ts",
    "prepare": "yarn build",
    "install": "yarn build-cpp"
  },
  "packageManager": "yarn@3.1.0",
  "dependencies": {
    "bindings": "^1.5.0",
    "module-alias": "^2.2.2",
    "nan": "^2.15.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^8.4.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.3",
    "node-gyp": "^8.4.1",
    "typescript": "^4.5.2"
  }
}
