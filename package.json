{
  "name": "irsdk-node",
  "version": "2.1.0",
  "author": {
    "name": "Matt Bengston",
    "email": "bengsfort@gmail.com"
  },
  "files": [
    "package.json",
    "./dist",
    "./build",
    "./lib",
    "./src/irsdk_node.h",
    "./src/irsdk_node.cc",
    "./scripts",
    "./binding.gyp",
    "./README.md",
    "./yarn.lock",
    "./.gitignore",
    "./.yarnrc.yml"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf build dist && node-gyp clean",
    "build": "yarn build-cpp && yarn build-ts",
    "build-cpp": "node-gyp configure && node-gyp rebuild",
    "build-cpp:debug": "node-gyp configure && node-gyp rebuild --debug",
    "build-ts": "tsc",
    "build:debug": "yarn build-cpp:debug && yarn build-ts",
    "watch": "tsc --watch",
    "prewatch": "yarn build && yarn watch",
    "lint": "eslint ./src --ext .js,.ts",
    "prepack": "yarn build",
    "generate-types": "node ./scripts/generate-var-types.js",
    "run-debug": "node ./dist/__tests__/sandbox.js",
    "dump-data": "node ./dist/__tests__/dump-data.js",
    "test": "jest",
    "test-inactive-sim": "jest ./src/__tests__/sim-inactive/*",
    "test-active-sim": "jest ./src/__tests__/sim-running/*"
  },
  "packageManager": "yarn@3.1.0",
  "dependencies": {
    "bindings": "^1.5.0",
    "js-yaml": "^4.1.0",
    "module-alias": "^2.2.2",
    "node-addon-api": "*",
    "node-gyp": "^8.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/jest": "^27.0.3",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "babel-jest": "^27.4.4",
    "eslint": "^8.4.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.3",
    "jest": "^27.4.4",
    "node-notifier": "^10.0.0",
    "typescript": "^4.5.2"
  }
}
