{
  "include": [
    "./src/*",
    "./src/**/*"
  ],
  "compilerOptions": {
    // Targets
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": true,
    "lib": [
      "DOM",
      "ESNext"
    ],

    // Sources
    "outDir": "./dist/",
    "rootDir": "./src/",
    "baseUrl": ".",
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],

    // Options
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,

    // Additional
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    // Resolution
    "moduleResolution": "Node",
    "esModuleInterop": true,
  }
}
