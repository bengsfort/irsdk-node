{
  "compilerOptions": {
    // Targets
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": true,

    // Sources
    "outDir": "./dist/",
    "rootDir": "./src/",

    // Options
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,

    // Additional
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    // Resolution
    "moduleResolution": "Node",
    "esModuleInterop": true,
  }
}
